@model IEnumerable<RestaurantManagement.Models.MenuItem>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<h2>Menu items</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.freeDelivery)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @if (ViewBag.isAdmin == "true")
            {
                Html.DisplayNameFor(model => model.dateOfLaunch);
            }
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Category.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.freeDelivery)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @if (ViewBag.isAdmin == "true")
        {
            Html.DisplayFor(modelItem => item.dateOfLaunch);
        }
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Active)
    </td>
    <td>
        @if(ViewBag.isAdmin == "true")
        {

            Html.ActionLink("Edit", "Edit", new { id = item.id });
           <p>|</p>
            Html.ActionLink("Delete", "Delete", new { id = item.id });
        }
        else
        {
            Html.ActionLink("Add to cart", "", new { id = item.id });
        }
    </td>
</tr>
}

</table>
